{
    "manifest_version": 3,
    "name": "Pyscript Screenshot",
    "version": "1.0",
    "description": "Capture screenshot of the current webpage",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }